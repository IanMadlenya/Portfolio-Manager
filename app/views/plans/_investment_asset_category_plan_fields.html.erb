<div style='padding-bottom: 10px;' class="investment_asset_category_plan fields">
	<div class="string clearfix required stringish control-group" style='float:left;'>
		<%= f.label :investment_asset_category_id, 'Category', :class => 'control-label' %>
		<div class="controls">
			<%= f.select :investment_asset_category_id, InvestmentAssetCategory.order('name').map{|i| [i.name, i.id]}, {:include_blank => true} %>
		</div>
	</div>
	<div class="string clearfix required stringish control-group" style='float:left;'>
		<%= f.label :allocation_percentage, 'Allocation Percentage', :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :allocation_percentage, {:style => 'width: 50px;margin-right:10px;', :class => 'percentage' } %>
			<%= f.hidden_field :_destroy, {:value => 'false'}%>
		</div>
	</div>
	<div  style='float:left;'><%= link_to_remove_fields "remove", f %></div>
	<div style='clear:both'></div>
</div>

