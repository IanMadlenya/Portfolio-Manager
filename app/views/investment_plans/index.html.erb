<h1>Investment Plans</h1>

<table class="table table-striped table-condensed table-outlined">
  <tr>
		<th>Name</th>
    <th>Portfolio</th>
    <th>Time period</th>
    <th>Start date</th>
    <th>Amount</th>
    <th></th>
  </tr>

<% @investment_plans.each do |investment_plan| %>
  <tr>
		<td><%= link_to investment_plan.name, investment_plan %></td>
    <td><%= link_to investment_plan.portfolio.name, portfolio_path(investment_plan.portfolio) %></td>
    <td><%= investment_plan.time_period %></td>
    <td><%= investment_plan.start_date.strftime('%m-%d-%Y') %></td>
    <td><%= number_to_currency(investment_plan.contribution_amount) %></td>
    <td><%= link_to 'Edit', edit_investment_plan_path(investment_plan), :class => 'btn  btn-primary' %> <%= link_to 'Remove', investment_plan, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Investment Plan', new_investment_plan_path, {:class => 'btn btn-primary'} %>
